  <div class="hock-bubble-white shadow-lg mb-3">
  <h2 class="fuzzy-bubbles-bold post-it-sponsor-3 mx-auto" style="font-size: 80px; margin-bottom: 30px; top: 20px">Ihre Daten</h2>

  <%= form_with model: @bestellung, local: true, url: bestellung_path, method: :post do |form| %>

    <!-- Vorname/Nachname -->
    <div class="center input-group mb-3 w-100">
      <span class="input-group-text">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alphabet" viewBox="0 0 16 16">
          <path d="M2.204 11.078c.767 0 1.201-.356 1.406-.737h.059V11h1.216V7.519c0-1.314-.947-1.783-2.11-1.783C1.355 5.736.75 6.42.69 7.27h1.216c.064-.323.313-.552.84-.552s.864.249.864.771v.464H2.346C1.145 7.953.5 8.568.5 9.496c0 .977.693 1.582 1.704 1.582m.42-.947c-.44 0-.845-.235-.845-.718 0-.395.269-.684.84-.684h.991v.538c0 .503-.444.864-.986.864m5.593.937c1.216 0 1.948-.869 1.948-2.31v-.702c0-1.44-.727-2.305-1.929-2.305-.742 0-1.328.347-1.499.889h-.063V3.983h-1.29V11h1.27v-.791h.064c.21.532.776.86 1.499.86Zm-.43-1.025c-.66 0-1.113-.518-1.113-1.28V8.12c0-.825.42-1.343 1.098-1.343.684 0 1.075.518 1.075 1.416v.45c0 .888-.386 1.401-1.06 1.401Zm2.834-1.328c0 1.47.87 2.378 2.305 2.378 1.416 0 2.139-.777 2.158-1.763h-1.186c-.06.425-.313.732-.933.732-.66 0-1.05-.512-1.05-1.352v-.625c0-.81.371-1.328 1.045-1.328.635 0 .879.425.918.776h1.187c-.02-.986-.787-1.806-2.14-1.806-1.41 0-2.304.918-2.304 2.338z"/>
        </svg>
      </span>
      <div class="form-floating">
        <input name="bestellung[first_name]" required id="bestellung_first_name" placeholder="Vorname" type="text" value="<%= @bestellung.first_name if present? %>" aria-label="first_name" class="form-control">
        <label for="bestellung_first_name">Vorname <sup>*</sup></label>
      </div>
      <div class="form-floating">
        <input name="bestellung[last_name]" required id="bestellung_last_name" placeholder="Nachname" type="text" value="<%= @bestellung.last_name if present? %>" aria-label="last_name" class="form-control">
        <label for="bestellung_first_name">Nachname <sup>*</sup></label>
      </div>
    </div>

    <!-- E-Mail -->
    <div class="center input-group mb-3 w-100">
      <span class="input-group-text">@</span>
      <div class="form-floating">
        <input name="bestellung[email]"
               id="bestellung_email"
               placeholder="E-Mail"
               value="<%= @bestellung.email if present? %>"
               type="email"
               required
               aria-label="last_name"
               class="form-control">

        <label for="bestellung_email">E-Mail <sup>*</sup></label>
      </div>
    </div>

    <!-- Telefonnummer -->
    <div class="input-group center mb-3 w-100">
      <span class="input-group-text">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
          <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"></path>
        </svg>
      </span>
      <div class="form-floating">
        <input name="bestellung[phone]"
               id="bestellung_phone"
               required
               placeholder="Telefonnummer"
               value="<%= @bestellung.phone if present? %>"
               type="text" aria-label="phone"
               aria-describedby="passwordHelpBlock"
               class="form-control">
        <label for="bestellung_phone">Telefonnummer <sup>*</sup></label>
      </div>
    </div>

    <!-- Strasse -->
    <div class="center input-group mb-3 w-100">
      <span class="input-group-text">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-signpost" viewBox="0 0 16 16">
              <path d="M7 1.414V4H2a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h5v6h2v-6h3.532a1 1 0 0 0 .768-.36l1.933-2.32a.5.5 0 0 0 0-.64L13.3 4.36a1 1 0 0 0-.768-.36H9V1.414a1 1 0 0 0-2 0M12.532 5l1.666 2-1.666 2H2V5z"/>
            </svg>
          </span>
      <div class="form-floating">
        <input name="bestellung[address]"
               id="bestellung_address"
               placeholder="address"
               value="<%= @bestellung.address if present? %>"
               type="text"
               required
               aria-label="address"
               class="form-control">

        <label for="bestellung_address">Strasse <sup>*</sup></label>
      </div>
    </div>

    <!-- Place and Zipcode -->
    <div class="center input-group mb-3 w-100">
    <span class="input-group-text">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
      </svg>
    </span>
      <div class="form-floating">
        <input name="bestellung[city]"
               id="bestellung_city"
               placeholder="city"
               value="<%= @bestellung.city if present? %>"
               type="text"
               required
               aria-label="city"
               class="form-control">

        <label for="bestellung_city">Ort <sup>*</sup></label>
      </div>
      <span class="input-group-text">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-code" viewBox="0 0 16 16">
        <path d="M5.854 4.854a.5.5 0 1 0-.708-.708l-3.5 3.5a.5.5 0 0 0 0 .708l3.5 3.5a.5.5 0 0 0 .708-.708L2.707 8zm4.292 0a.5.5 0 0 1 .708-.708l3.5 3.5a.5.5 0 0 1 0 .708l-3.5 3.5a.5.5 0 0 1-.708-.708L13.293 8z"/>
      </svg>
    </span>
      <div class="form-floating">
        <input name="bestellung[zipcode]"
               id="bestellung_zipcode"
               placeholder="Postleitzahl"
               value="<%= @bestellung.zipcode if present? %>"
               type="text"
               required
               aria-label="zipcode"
               class="form-control">

        <label for="bestellung_zipcode">Postleitzahl <sup>*</sup></label>
      </div>
    </div>

    <!-- Nachricht -->
    <div class="center input-group mb-3 w-100">
      <div class="input-group-text">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-text" viewBox="0 0 16 16">
          <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
          <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5M3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6m0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5"/>
        </svg>
      </div>
      <div class="form-floating">
          <textarea name="bestellung[message]"
                    id="bestellung_message"
                    placeholder="message"
                    aria-label="message"
                    style="height: 100px"
                    class="form-control"></textarea>

        <label for="bestellung_message">Nachricht</label>
      </div>
    </div>

    <div style="text-align: center; margin-top: 20px">
      <%= form.submit "Bestellung schicken", class: "btn btn-custom-primary m-3" %>
    </div>
  <% end %>

</div>
