    <h3 class="pt-3"><i class="bi bi-person"></i> <strong>HLL:</strong> <%= camp.leader.pfadiname %></h3>
  </div>
  <hr>
  <h3 class="text-left">Allg. Beschreibung: </h3>
  <%= camp.general_description %>
  <hr>
  <% if camp.template != "Kein Lager ausgeschrieben" %>
    <h3 class="text=left">Diesj√§hrige Beschreibung: </h3>
    <%= camp.this_camp_description %>
