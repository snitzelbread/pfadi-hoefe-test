<% content_for :title, "New camp" %>

<h1>New camp</h1>

<div class="container justify-content-center w-100">
  <%= simple_form_for @camp, url: camps_path, html: { multipart: true } do |f| %>
    <% templates = ["Lager ausgeschrieben", "Kein Lager ausgeschrieben"] %>
    <%= f.input :name, as: :select, collection: %w[Pfingstlager Sommerlager Wochenlager] %>
    <%= f.input :general_description, as: :rich_text_area %>
    <%= f.input :template, as: :select, collection: templates %>
    <%= f.input :leader_id, as: :select,
                collection: @all_leaders,
                selected: @all_leaders.first,
                label_method: :pfadiname,
                value_method: :id,
                label: "Hauptlagerleitung" %>
    <%= f.input :this_camp_description, as: :rich_text_area, hint: "Hier alle Infos zum aktuellen Lager eintragen (Wann, Wo, Motto, etc.)" %>
    <%= f.input :image, as: :file, hint: "Er sagt gerne, man habe noch kein Bild hochgeladen. Falls schon eins hinterlegt ist, einfach leerlassen." %>
    <%= f.submit "Speichern", class: "btn btn-custom-primary" %>
  <% end %>
</div>
<br>

<div class="mt-3">
  <%= link_to "Zur Lagerliste", camps_path %>
</div>
