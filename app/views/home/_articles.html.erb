<div class="card mb-3 w-100 shadow-lg grow shrink" style="margin: 2vw; border: 2.5px solid green">
  <div class="row g-0">
    <div class="col-md-4">
      <% if article.images.any? %>
        <%= image_tag article.images.first, class: "img-fluid rounded-start h-100", style: "object-fit: cover; width: 100%; height: 100%;" if present?%>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title" style="font-size: calc(10px + 1vw)"><%= article.title %></h5>
        <p class="card-text" style="font-size: calc(10px + 0.6vw)">
          <%= truncate(article.content, length: 700, separator: ' ') %>
          <%= link_to "Mehr lesen", article_path(article.id) if article.content.length >= 700 %>
        </p>
        <p class="card-text">
          <small class="text-body-secondary"><strong>Ver√∂ffentlicht: </strong><%= article.date.strftime("%d.%m.%Y") %></small>
        </p>
      </div>
    </div>
  </div>
</div>
