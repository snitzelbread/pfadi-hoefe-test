<% if hock.present? %>
  <div class="container">
    <div class="fixed-div">
      <h3 class="fuzzy-bubbles-bold"> <%= stufe %></h3>
    </div>
    <div>
      <h2 class="dm-sans-title"><%= hock.title %></h2>
    </div>
    <div class="d-flex justify-content-center gap-3 mb-2">
      <div><i class="bi bi-calendar"></i> <%= hock.datetime.strftime("%d.%m.%Y") %></div>
      <div><i class="bi bi-clock"></i> <%= hock.datetime.strftime("%H:%M") %> - <%= hock.end_time.strftime("%H:%M") %></div>
    </div>
    <div class="d-flex justify-content-center gap-3 mb-2">
      <div><i class="bi bi-geo-alt"></i> <%= hock.ort %></div>
    </div>
    <hr style="margin-top: 0">
    <div>
      <%= remove_brackets(hock.description.to_plain_text.truncate(200)) %>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="container empty-state-box">
      <h2><strong>Kein <%= stufe %>-HÃ¶ck erfasst.</strong></h2>
    </div>
  </div>
<% end %>
