<%= image_tag("home/home_background.jpeg", class: "image", style: "filter: brightness(80%)") %>


<div class="container" style="position: relative; top: 8vh; margin-bottom: 10%">
  <div class="row justify-content-center h-100">
    <div class="col-lg-3 z-1">
      <%= image_tag("logo/pfadi_logo.jpeg", class: "logo") %>
    </div>
    <div class="col-lg-9 align-content-center z-1">
      <h1 class="playpen-sans-title text-title" style="color: white">Pfadi Höfe </h1>
      <p class="text-description playpen-sans-title" style="color: white">
        <i>Mit freud debii! - Mis bescht! - Allzeit bereit! - Zäme wyter! - Bewusst handeln! </i>
      </p>
    </div>
  </div>
</div>


<!--<div class="post-it-container m-3">-->
