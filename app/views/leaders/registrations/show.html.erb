<style>
    .leiter-title {
        color: #000000;
        text-align: center;
    }

    .leiter-details p {
        font-size: 1.1rem;
    }

    .actions .btn {
        margin-right: 10px;
    }
</style>


<%= render partial: "leaders/shared/error_messages" %>

<% @leader = current_leader %>

<div class="hocks-container m-3 w-100">
  <div class="box-card">
    <h1 class="leiter-title">
      <%= @leader.pfadiname %>
    </h1>
    <hr>


    <% if @leader.image.present? %>
      <%= image_tag(@leader.image, height: 200, width: 200, class: "shadow-lg", style: "border-radius: 10px; float: left; margin-top: 2vw") %>
    <% end %>
    <div style="float: left; margin-left: 3vw">
      <p><strong>Vorname:</strong> <%= @leader.first_name %></p>
      <p><strong>Nachname:</strong> <%= @leader.last_name %></p>
      <p><strong>E-Mail:</strong> <%= @leader.email %></p>
      <p><strong>Stufe:</strong> <%= @leader.stufe %></p>
      <p><strong>Funktion:</strong> <%= @leader.funktion %></p>
      <p><strong>Account erstellt:</strong> <%= @leader.created_at.strftime('%B %d, %Y') %></p>
      <p><strong>Zuletzt aktualisiert:</strong> <%= @leader.updated_at.strftime('%B %d, %Y') %></p>
    </div>


    <div class="actions mt-4">
      <%= link_to 'Bearbeiten', edit_leader_registration_path(@leader), class: "btn btn-custom-primary m-2" %>
    </div>
  </div>
</div>
