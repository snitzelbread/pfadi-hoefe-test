<div class="card hock shadow grow text-center" style="width: 33vw">
<%= form_with model: @parent, url: login_path do |form| %>
  <% unless @parent.nil? %>
    <% if @parent.errors.any? %>
      <div style="color: red">
        <% flash[:alert] = format_errors(@parent) %>
    <% end %>
  <% end %>


    <svg xmlns="http://www.w3.org/2000/svg" style="align-self: center" width="200" height="200" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
      <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"/>
    </svg>
    <h1>Eltern</h1>

    <!-- E-Mail -->
    <div class="center input-group mb-3 w-75">
      <span class="input-group-text">@</span>
      <div class="form-floating">
        <input name="parent[email]"
               id="parent_email"
               placeholder="Email"
               type="email"
               required
               aria-label="email"
               class="form-control">

        <label for="leiter_email">E-Mail</label>
      </div>
    </div>

    <!-- Passwort -->
    <div class="center input-group mb-3 w-75">
        <span class="input-group-text">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
            <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8m4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5"/>
            <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
          </svg>
        </span>
      <div class="form-floating">
        <input name="parent[password]"
               id="parent_password"
               placeholder="Passwort"
               type="password"
               required
               aria-label="password"
               class="form-control">

        <label for="parent_password">Passwort</label>
      </div>
    </div>

    <div class="center mb-3 mt-5">
      <%= form.submit "Einloggen", class: "btn btn-custom-success" %>
    </div>
  </div>
  </div>
<% end %>
