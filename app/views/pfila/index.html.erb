
<% if @pfila.nil? %>
  <%= render partial: "shared/empty_state", locals: { name: "Pfingstlager"} %>
<% else %>
  <%= render partial: "camps/camp_page", locals: { camp: @pfila, title_image: @title_image, shorthand: "pfila" } %>
  <% if leader_signed_in? %>
    <%= link_to "Bearbeiten", edit_camp_path(@pfila.id), class: "btn btn-custom-warning" %>
  <% end %>
<% end %>
