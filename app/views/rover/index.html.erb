<div class="post-it-container text-center">
  <h1 class="fuzzy-bubbles-bold post-it-title-2" style="font-size: 100px">🗺️ Rover 🗺️</h1>
</div>

<div class="post-it-container text-center">
  <h1 class="fuzzy-bubbles-bold post-it-title-5 w-50">Rover-Team</h1>
</div>
<% @leaders = Leader.where(stufe: "Rover").order(funktion: :desc) %>
<!-- Leitpersonen -->
<div class="container">
  <div class="row justify-content-center">
    <% @leaders.each do |t| %>
      <div class="col-lg-4 col-md-6 col-sm-10">
        <%= render partial: "shared/contact_form",
                   locals: { image: t.image,
                             name: "#{t.first_name} #{t.last_name} v/o #{t.pfadiname.capitalize}",
                             funktion: "#{t.funktion} #{t.stufe}",
                             email: "#{t.email}" } if t.present? %>
      </div>
    <% end %>
  </div>
</div>
