        </div>
        <div class="form-floating">
          <input name="anmeldung[krankenkasse]"
                 id="anmeldung_krankenkasse"
                 placeholder="krankenkasse"
                 value="<%= @anmeldung.krankenkasse if present? %>"
                 type="text"
                 required
                 aria-label="krankenkasse"
                 class="form-control">

          <label for="anmeldung_address">Krankenkasse <sup>*</sup></label>
        </div>
      </div>

      <!-- AHV-Nummer -->
      <div class="input-group mb-3 w-100">
        <div class="input-group-text">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-journal-medical" viewBox="0 0 16 16">
