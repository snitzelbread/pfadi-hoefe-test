          </svg>
        </div>
        <div class="form-floating">
          <textarea name="anmeldung[message]"
                    id="anmeldung_message"
                    placeholder="message"
                    aria-label="message"
                    style="height: 100px"
                    class="form-control"></textarea>

          <label for="anmeldung_address">Nachricht</label>
        </div>
      </div>

      <!-- Rechte an Bildern // Pfadikravatte bestellen -->
      <div class="input-group mb-3">
        <span class="input-group-text">Rechte an Bildern <sup>*</sup></span>
        <div class="input-group-text">
          <%= form.check_box :rights_to_pictures %>
        </div>
      </div>

      <div class="container align-content-center">
        <%= recaptcha_tags %>
