<div class="post-it-container">
  <h1 class="fuzzy-bubbles-bold post-it-title-3">Anmeldeformular</h1>
</div>
<div class="container justify-content-center w-75">
  <div class="hock-bubble shadow-lg" style="background: white; padding: 20px">
    <%= form_with model: @anmeldung, local: true, url: anmeldung_path, method: :post do |form| %>


      <!-- Vorname/Nachname -->
      <div class="input-group mb-3 w-100">
      <span class="input-group-text">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alphabet" viewBox="0 0 16 16">
