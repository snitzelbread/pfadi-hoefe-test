<style>
    #navbar {
        position: sticky;
        top: 15px;
        overflow: visible;
        z-index: 100;

        background-color: #C40C0C;
        border: 3px solid black;
        border-radius: 8px;
        width: 98%;
        transition: all 0.15s ease-in-out;
        box-shadow: 3px 3px 0 0 black;



        margin: 0 auto; /* Centers the navbar within its container */
        left: 0; /* Removes any default left offset */
        right: 0; /* Removes any default right offset */

        font-family: "DM Sans", sans-serif;
    }


</style>

<nav class="navbar navbar-expand-lg" data-bs-theme="dark" id="navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <%= image_tag("logo/pfadi_logo.jpeg", style: "width:30px; height: 24px", class: "d-inline-block align-text-top") %>
      Pfadi Höfe
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= nav_link_to "Home", root_path %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Stufen
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Biber", biber_path, class: "dropdown-item" %></li>
            <li><%= link_to "Wölfli", woelfli_path, class: "dropdown-item" %></li>
            <li><%= link_to "Pfadi", pfadi_path, class: "dropdown-item" %></li>
            <li><%= link_to "Pios", pios_path, class: "dropdown-item" %></li>
            <li><%= link_to "Rover", rover_path, class: "dropdown-item" %></li>
          </ul>
        </li>
        <li class="nav-item">
          <%= nav_link_to "Verein", verein_path %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Lager
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Pfingstlager", pfila_path, class: "dropdown-item" %></li>
            <li><%= link_to "Sommerlager", sola_path, class: "dropdown-item" %></li>
            <li><%= link_to "Wochenlager", wola_path, class: "dropdown-item" %></li>
          </ul>
        </li>
        <li class="nav-item">
          <%= nav_link_to "Kleiderkasten", kleiders_path %>
        </li>
        <li class="nav-item">
          <%= nav_link_to "Beiträge", articles_path %>
        </li>
        <li class="nav-item">
          <%= nav_link_to "Sponsoren", sponsors_path %>
        </li>
        <li class="nav-item">
          <%= nav_link_to "Anmeldung", anmeldung_path %>
        </li>
      </ul>

      <!-- This section moves to the right side -->
      <ul class="navbar-nav ms-auto">
        <% if current_parent.nil? && current_leader.nil? %>
          <li class="nav-item">
            <%= nav_link_to "Log In", login_path %>
          </li>
        <% elsif leader_signed_in? %>
          <li class="nav-item">
            <%= nav_link_to "Camps", camps_path %>
          </li>
          <li class="nav-item">
            <a href="https://cloud.linuxfabrik.io/index.php/s/XEpctQQeR4aNiin" class="nav-link">Archiv</a>
          </li>
          <li class="nav-item">
            <%= nav_link_to "Profil", profil_path(current_leader) %>
          </li>
          <li class="nav-item">
            <%= nav_link_to "Höcks", hocks_path, :get %>
          </li>
          <li class="nav-item">
            <span class="nav-link" style="color: white">Logged in as: <%= current_leader.pfadiname %></span>
          </li>
          <li class="nav-item">
            <%= button_to "Logout", destroy_leader_session_path, method: :delete, class: "btn btn-logout", "data-turbo-confirm": "Bist du dir sicher?", style: "font-size: 16px" %>
          </li>
        <% else %> <!-- Parents -->
          <li class="nav-item">
            <a href="https://cloud.linuxfabrik.io/index.php/s/XEpctQQeR4aNiin" class="nav-link">Archiv</a>
          </li>
          <li class="nav-item">
            <%= nav_link_to "Logout", logout_path, :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
